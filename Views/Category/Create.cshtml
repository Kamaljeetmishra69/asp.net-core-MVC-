@model Category

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-lg border-0 rounded-4">

                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">Create Category</h4>
                </div>

                <div class="card-body p-4">

                    <form method="post">

                        <div class="mb-4">
                            <label asp-for="CategoryName" class="form-label fw-semibold"></label>
                            <input asp-for="CategoryName"
                                   class="form-control form-control-lg"
                                   placeholder="Enter category name" />
                            <span asp-validation-for="CategoryName" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="DisplayOrder" class="form-label fw-semibold"></label>
                            <input asp-for="DisplayOrder"
                                   class="form-control form-control-lg"
                                   placeholder="Enter display order" />
                            <span asp-validation-for="DisplayOrder" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-check-circle"></i> Create
                            </button>

                            <a asp-controller="Category"
                               asp-action="Index"
                               class="btn btn-outline-secondary px-4">
                                Back to List
                            </a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>




 @section Scripts {
    @{
        <partial name"_ValidationScriptsPartial"/>
    }

} 

